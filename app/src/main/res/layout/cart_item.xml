<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_card"
    android:layout_width="match_parent"
    app:contentPadding="10dp"
    android:layout_margin="10dp"
    android:layout_height="100dp"
    app:cardCornerRadius="16dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cart_item_name"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="mixhoney"
        android:textSize="15dp" />
    <ImageView
        android:id="@+id/cart_item_img"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cart_item_name"
        android:src="@drawable/ic_wave_2"/>

    <TextView
        android:id="@+id/cart_quantity"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/cart_item_price"
        android:gravity="center"
        android:text="99"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cart_item_price"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/delete_item"
        android:gravity="center"
        android:text="9999"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/delete_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_cancel_24"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        />
</RelativeLayout>

</androidx.cardview.widget.CardView>
